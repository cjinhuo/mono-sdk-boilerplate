{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowUnreachableCode": false, // throw error when has unreachable code
    "allowUnusedLabels": false, // throw error reporting for unused labels.
    "alwaysStrict": false, // will add 'use strict' in the beginning of the file
    "strictNullChecks": true,
    "baseUrl": ".",
    "preserveConstEnums": false, // default value is true.even not import also generate code when use const enum
    "isolatedModules": false,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "pretty": true,
    "noImplicitAny": false,
    "removeComments": true,
    "stripInternal": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, // Ensure that casing is correct in imports.
    "paths": { // like alias. associated with baseUrl
      "@boilerplate/*": [
        "packages/*/src"
      ],
      "@/test/*": [
        "test/*"
      ]
    },
    "types": [
      "node",
      "jest",
    ],
    "target": "ES5",
    "module": "CommonJS",
    // "outDir": "./dist/", 
    // "declaration": true, 
    // "declarationMap": true,
    // "declarationDir": "./dist/packages/",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": false,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "packages",
    "script"
  ],
}