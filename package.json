{
  "name": "mono",
  "version": "0.0.1",
  "private": true,
  "description": "the best monorepo",
  "workspaces": ["packages/*", "utils/*"],
  "scripts": {
    "commit": "git add . && git cz",
    "esm": "pnpm --parallel esm",
    "test": "pnpm --parallel test",
    "batch-rollup": "pnpm --parallel batch-rollup",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "bundle": "DEBUG=* ts-node ./scripts/bundle.ts --package packages",
    "postinstall": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "packageManager": "pnpm@7.13.5",
  "engines": {
    "node": ">=16.18.0",
    "pnpm": ">=7"
  },
  "author": "cjinhuo",
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@mono/tsconfig": "workspace:^",
    "@rollup/plugin-alias": "^4.0.2",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-html": "^0.2.4",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-strip": "^2.1.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.2.0",
    "@types/node": "^17.0.31",
    "chalk": "^5.1.2",
    "clipanion": "^3.2.0-rc.11",
    "consola": "^2.15.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-git": "^1.4.1",
    "debug": "^4.3.4",
    "eslint": "^8.14.0",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "pkgs-graph": "^8.0.0",
    "prettier": "^2.6.2",
    "rollup": "^2.79.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-sizes": "^1.0.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": ["eslint --fix", "prettier --write"],
    "*.@(yml|yaml)": ["prettier --parser yaml --write"],
    "*.md": ["prettier --parser markdown --write"],
    "*.json": ["prettier --parser json --write"]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "rollup": "^3"
      }
    }
  },
  "dependencies": {
    "@mono/eslint-config": "workspace:*"
  }
}
