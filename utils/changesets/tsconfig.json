{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"jsx": "react-jsx",
		"allowUnreachableCode": false, // throw error when has unreachable code
		"allowUnusedLabels": false, // throw error reporting for unused labels.
		"alwaysStrict": false, // will add 'use strict' in the beginning of the file
		"strictNullChecks": true,
		"baseUrl": ".",
		"preserveConstEnums": false, // default value is true.even not import also generate code when use const enum
		"isolatedModules": false,
		"experimentalDecorators": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"pretty": true,
		"noImplicitAny": false,
		"removeComments": true,
		"stripInternal": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true, // Ensure that casing is correct in imports.
		"paths": {},
		"types": ["node", "jest"],
		// "typeRoots": [
		//   "node_modules/@types"
		// ],
		"target": "es2015",
		"module": "commonjs",
		"allowJs": false,
		"lib": ["es6", "dom"],
		"sourceMap": false,
		"declaration": false // 移除 TypeScript 声明文件生成
	},
	"include": ["src/**/*.ts"]
}
