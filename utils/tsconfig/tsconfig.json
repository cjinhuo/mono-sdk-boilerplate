{
	"compilerOptions": {
		"jsx": "react-jsx",
		"allowUnreachableCode": false, // throw error when has unreachable code
		"allowUnusedLabels": false, // throw error reporting for unused labels.
		"alwaysStrict": false, // will add 'use strict' in the beginning of the file
		"strictNullChecks": true,
		"baseUrl": ".",
		"preserveConstEnums": false, // default value is true.even not import also generate code when use const enum
		"isolatedModules": false,
		"experimentalDecorators": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"pretty": true,
		"noImplicitAny": false,
		"removeComments": true,
		"stripInternal": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true, // Ensure that casing is correct in imports.
		"paths": {
			// like alias. associated with baseUrl
			// "@mono/*": [
			//   "../../packages/*/src"
			// ],
			"@/test/*": ["test/*"]
		},
		"types": ["node", "jest"],
		// "typeRoots": [
		//   "node_modules/@types"
		// ],
		"target": "es2015",
		"module": "esnext",
		"allowJs": false,
		"lib": ["es6", "dom"],
		"sourceMap": false,
		"composite": true
	}
}
